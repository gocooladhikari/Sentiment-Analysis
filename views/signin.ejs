        <!-- Sign In Portal -->
        <div class="container">
            <div class="row">
                <div class="col"></div>
                <div class="col-8">
                    <div class="card signInCard">
                        <h1 class="signInHeader">Sign In Portal</h1>

                        <img src="pop-sm.jpg" class= "img-fluid signInImg">
                        <%- include('partials/messages') %>
                        <form class="signInForm" action="/users/register" method="POST">
                            <div class="form-group">
                                <input type="text" name="name" class="form-control entryField" placeholder="Full Name">
                            </div>
    
                            <div class="form-group">
                                <input type="email" name="email" class="form-control entryField" placeholder="Email">
                            </div>

                            <div class="form-group">
                                <input type="password" name="password" class="form-control entryField" placeholder="Password">
                            </div>

                            <div class="form-group">
                                <input type="password" name="password2" class="form-control entryField" placeholder="Confirm Password">
                            </div>
    
                            <button type="submit" class="btn btn-primary submitButton">Register</button>
                            
                            <p class="regOption">Already a Member?     <a href="#"> Log In</a></p>
                        
                        </form>
                    </div>    
                </div>
                <div class="col"></div>
                
            </div>    
            </div>        

   